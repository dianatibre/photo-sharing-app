<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Gallery</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
<!--add gallery name to the title -->
<h1>Manage Gallery <%= galleryName %></h1>
<h3>Photos</h3>
<ul>
    <% photos.forEach(photo => { %>
        <li>
            <img src="<%= photo.imageUrl %>" alt="<%= photo.description %>">
            <!-- Add a delete button for each photo -->
            <form action="/gallery/<%= galleryId %>/delete-photo/<%= photo.id %>" method="post">
                <button type="submit">Delete</button>
            </form>
        </li>
    <% }) %>
</ul>
<form action="/gallery/<%= galleryId %>/upload-photos" method="post" enctype="multipart/form-data">
    <input type="file" name="photos" accept="image/*" multiple required>
    <button type="submit">Upload Photos</button>
</form>
<!-- Form for deleting the entire gallery -->
<form id="deleteForm" action="/gallery/<%= galleryId %>/delete" method="post">
    <input type="hidden" name="_method" value="DELETE">
    <button type="submit" onclick="return confirm('Are you sure you want to delete this gallery?')">Delete Gallery</button>
</form>
<form action="/logout" method="post">
    <button type="submit">Logout</button>
</form>
</body>
</html>
